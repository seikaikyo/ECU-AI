# ECU-AI 環境配置範本
# 複製此檔案為 .env 並填入實際值

# GitHub 配置
GITHUB_TOKEN=ghp_****************************
GITHUB_REPO=https://github.com/seikaikyo/ECU-AI.git

# GitLab 配置  
GITLAB_TOKEN=glpat-********************
GITLAB_REPO=https://gitlab.yesiang.com/ys_it_teams/ecu-ai.git

# 代理伺服器配置
PROXY_PORT=8888
PROXY_TARGET_HOST=claude.ai
PROXY_USER_AGENT=Claude-Proxy/1.0
PROXY_TIMEOUT=30000

# 日誌配置
LOG_LEVEL=info
LOG_FILE=proxy.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# 企業網路配置
ENTERPRISE_PROXY=http://proxy.company.com:8080
ENTERPRISE_DNS=8.8.8.8,8.8.4.4

# 安全配置
SECURITY_CHECK_ENABLED=true
RATE_LIMIT_ENABLED=true
MAX_CONNECTIONS=100
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# API 配置（請勿提交真實值）
ANTHROPIC_API_KEY=sk-ant-****************************
OPENAI_API_KEY=sk-****************************

# 資料庫配置（如果需要）
DATABASE_URL=postgresql://user:password@localhost:5432/ecuai
REDIS_URL=redis://localhost:6379

# 監控配置
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
METRICS_PORT=9090